#include<EEPROM.h>
#include<Servo.h>

long BreakPattern[6];
int pattern[5];
int flag=0;
int acc_flag=0;
int knock;

Servo Servo_obj;

void setup() 
{
  pinMode(7, INPUT_PULLUP);
  Servo_obj.attach(3);
  Servo_obj.write(180);
  Serial.begin(9600);
}

void loop() 
{
   int i=0;
   if(digitalRead(7) == LOW)
   {   
      Serial.println("Start");
      long stt= millis();
      delay(1000);
      while(stt<(stt+10000))
      {
        int temp=analogRead(A0);
        if(temp>80 && flag==0 && i<=5)
        {
             delay(10);
             flag=1;
             BreakPattern[i++]=millis()-stt;
             if(i>5)
             break;
        }

        else if(temp == 0)
        flag=0;
      }
      
      long stp=millis();
      Serial.println("Stop");
      for(int i=0;i<5;i++)
      {
         knock=1;
         if(BreakPattern[i+1]-BreakPattern[i] <500 )
            pattern[i]=0;
         else
            pattern[i]=1;
         Serial.println(pattern[i]);
      }

      if(digitalRead(7) == 0)
      {
         for(int i=0;i<5;i++)
            EEPROM.write(i,pattern[i]);
         while(digitalRead(7) == 0);
      }

      else
      {
         if(knock == 1)
         {
            for(int i=0;i<5;i++)
            {
               if(pattern[i] == EEPROM.read(i))
               {
                  Serial.println(acc_flag++);
               }

               else
               {
                    Serial.println("Break");
                    break;                
               }
            }
         }

         Serial.println(acc_flag);
         if(acc_flag >=  4)
         {
             Serial.println(" Accept");
             Servo_obj.write(0);
             delay(5000);
             Servo_obj.write(180);
         }
         else
            Serial.println("Reject");
      }

      for(int i=0;i<5;i++)
      {
         pattern[i]=0;
         BreakPattern[i]=0;
      }
      BreakPattern[i]=0;
      acc_flag=0;
   }
}
